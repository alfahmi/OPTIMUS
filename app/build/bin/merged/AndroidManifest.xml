<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.alfdev.cdmp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/MainTheme" >
        <activity
            android:name="in.alfdev.cdmp.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:resizeableActivity="true"
            android:theme="@style/AppThemeLight" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.alfdev.cdmp.LoginActivity"
            android:label="Login"
            android:theme="@style/AppThemeLight" />
        <activity
            android:name="in.alfdev.cdmp.DataActivity"
            android:label="Data Input"
            android:theme="@style/AppThemeLight2" />
        <activity
            android:name="in.alfdev.cdmp.ModifyDataActivity"
            android:label="Modify Data"
            android:theme="@style/AppThemeLight2" />
    </application>

</manifest>